@using MudBlazor.ThemeManager

<div class="d-flex">
    <MudButton Variant="Variant.Filled" Class="mr-3" OnClick="OpenThemeManager">
        Change Theme
    </MudButton>
    <MudThemeManagerButton  OnClick="OpenThemeManager"/>
</div>
<MudThemeManager @bind-Open="_themeManagerOpen" Theme="_themeManager" ThemeChanged="UpdateTheme" />

@code {
    private ThemeManagerTheme _themeManager = new ThemeManagerTheme();
    public bool _themeManagerOpen = false;

    void OpenThemeManager()
    {
        _themeManagerOpen = true;
    }

    void UpdateTheme(ThemeManagerTheme value)
    {
        _themeManager = value;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        StateHasChanged();
    }
}
